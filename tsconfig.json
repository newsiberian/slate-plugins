{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2018",
    "lib": [
      "es7",
      "dom"
    ],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@mercuriya/*": [
        "packages/*/src"
      ]
    }
  }
}
