{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES6",
    "lib": ["es7", "dom"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "skipLibCheck": true,
    "importHelpers":true,
    "baseUrl": ".",
    "paths": {
      "@mercuriya/*": ["packages/*/src"]
    }
  }
}
